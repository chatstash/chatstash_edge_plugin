{
  "manifest_version": 3,
  "name": "Obsidian AI Bridge",
  "version": "1.0.1",
  "description": "High-fidelity capture for DeepSeek & Doubao to Obsidian",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1/*",
    "https://127.0.0.1/*",
    "https://chat.deepseek.com/*",
    "https://www.doubao.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.deepseek.com/*", "https://www.doubao.com/*", "https://chatgpt.com/*", "https://gemini.google.com/*"],
      "js": ["lib/turndown.js", "lib/turndown-service.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
